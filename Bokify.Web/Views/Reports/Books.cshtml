
@model BooksReportViewModel
@{
    ViewData["Title"] = "Books Report";
}

<div class="card mb-4">
    <div class="card-body">
        <form asp-controller="Reports" method="get" id="Filters" class="js-excluded-validation">
            <input type="hidden" id="pageNumber" name="pageNumber" value="1" />
            <div class="row">
                <div class="col">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <select class="form-select form-select-solid form-select form-select-solid-solid js-select2" asp-for="SelectedAuthors" asp-items="@Model.Authors" data-placeholder="Select Authors">
                                <option value="">selact an Author</option>
                            </select>
                            <label asp-for="Authors"> </label>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <select class="form-select form-select-solid form-select form-select-solid-solid js-select2" asp-for="SelectedCategories" asp-items="@Model.Categories" data-placeholder="Select Categories">
                                <option value="">selact an Category</option>
                            </select>
                            <label asp-for="Categories"> </label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Show Report</button>
        </form>
    </div>
</div>

@if (Model.Books is not null)
{
    <div class="card">
        <div class="card-header">
            <div class="card-title"><span>Books</span></div>
        

        @if (Model.Books.Any())
        {
            <div class="card-toolbar gap-3 justify-content-end">
                <a class="btn btn-light-success" asp-action="ExportBooksToExcel"
                       asp-route-authors="@Context.Request.Query["SelectedAuthors"]"
                       asp-route-categories="@Context.Request.Query["SelectedCategories"]">
                    <i class="bi bi-file-earmark-excel-fill"></i>
                    Export to Excel
                </a>

                <a class="btn btn-light-danger"  asp-action="ExportBooksToPDF"
                   asp-route-authors="@Context.Request.Query["SelectedAuthors"]"
                   asp-route-categories="@Context.Request.Query["SelectedCategories"]" >
                    <i class="bi bi-filetype-pdf"></i>
                    Export to PDF
                </a>
            </div>
        }
        </div>

        <div class="card-body">
            @if (Model.Books.TotalPages > 1)
            {
                <partial name="_Pagination" model="new PaginationViewModel{ PageNumber = Model.Books.PageNumber, TotalPages = Model.Books.TotalPages}"/>
            }
            @if (Model.Books.Any())
            {
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-2 align-middle">
                        <thead>
                            <tr class="fw-bold bg-black fs-6 text-white">
                                <th class="ps-3">Title</th>
                                <th>Author</th>
                                <th>Publisher</th>
                                <th>Publisheing Date</th>
                                <th>Hall</th>
                                <th>Categories</th>
                                <th>Avilable for Rental</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.Books)
                            {
                                <tr>
                                    <td>@book.Title</td>
                                    <td>@book.Author!.Name</td>
                                    <td>@book.Publisher</td>
                                    <td>@book.PublishingDate.ToString("d MMM yyyy", new CultureInfo("en-US"))</td>
                                    <td>@book.Hall</td>
                                    <td>@(string.Join(", ", book.Categories.Select(c => c.Category!.Name)))</td>
                                    <td>@(book.IsAvailableForRental ? "Yes" : "No")</td>
                                    <td>@(book.IsDeleted ? "Deleted" : "Avilable")</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <h5> No books were found!</h5>
            }

        </div>
    </div>
}

@section Scripts {
    <script src="~/js/reports.js" asp-append-version="true"></script>
}