@model RentalsReportViewModel
@{
    ViewData["Title"] = "Rentals Report";
}

<div class="card mb-4">
    <div class="card-body">
        <form asp-controller="Reports" method="get" id="Filters" class="js-excluded-validation">
            <input type="hidden" id="pageNumber" name="pageNumber" value="1" />
            <div class="row">
                <div class="col-3">
                    <div class="mb-5">
                        <h6>Duration</h6>
                            <input class="form-control form-control-solid jus js-date-range" asp-for="Date" />
                        <span asp-validation-for="Date" class="text-danger d-block"></span>
                    </div>
                </div>
            </div>

            
            <button type="submit" class="btn btn-primary">Show Report</button>
        </form>
    </div>
</div>

@if (Model.Rentals is not null)
{
    <div class="card">
        <div class="card-header">
            <div class="card-title"><span>Rentals</span></div>


            @if (Model.Rentals.Any())
            {
                <div class="card-toolbar gap-3 justify-content-end">
                    <a class="btn btn-light-success" asp-action="ExportRentalsToExcel"
                       asp-route-date="@Context.Request.Query["Date"]">
                        <i class="bi bi-file-earmark-excel-fill"></i>
                        Export to Excel
                    </a>

                    <a class="btn btn-light-danger" asp-action="ExportRentalsToPDF"
                       asp-route-date="@Context.Request.Query["Date"]">
                        <i class="bi bi-filetype-pdf"></i>
                        Export to PDF
                    </a>
                </div>
            }
        </div>

        <div class="card-body">
            @if (Model.Rentals.TotalPages > 1)
            {
                <partial name="_Pagination" model="new PaginationViewModel{ PageNumber = Model.Rentals.PageNumber, TotalPages = Model.Rentals.TotalPages}" />
            }
            @if (Model.Rentals.Any())
            {
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-2 align-middle">
                        <thead>
                            <tr class="fw-bold bg-black fs-6 text-white">
                                <th class="ps-3">Subscriber Id</th>
                                <th>Subscriber Name</th>
                                <th>Subscriber Phone</th>
                                <th>Book Title</th>
                                <th>Book Author</th>
                                <th>Rental Date</th>
                                <th>End Date</th>
                                <th>Return Date</th>
                                <th>Extended On</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rental in Model.Rentals)
                            {
                                <tr>
                                    <td>@rental.Rental!.SubscriberId</td>
                                    <td>@(rental.Rental!.Subscriber!.FirstName+" "+rental.Rental!.Subscriber.LastName)</td>
                                    <td>@rental.Rental!.Subscriber.MobileNumber</td>
                                    <td>@rental.BookCopy!.Book!.Title</td>
                                    <td>@rental.BookCopy.Book.Author!.Name</td>
                                    <td>@rental.RentalDate.ToString("d MMM yyyy", new CultureInfo("en-US"))</td>
                                    <td>@rental.EndDate.ToString("d MMM yyyy", new CultureInfo("en-US"))</td>
                                    <td>@rental.ReturnDate?.ToString("d MMM yyyy", new CultureInfo("en-US"))</td>
                                    <td>@rental.ExtendedeOn?.ToString("d MMM yyyy", new CultureInfo("en-US"))</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <h5> No Rentals were found!</h5>
            }

        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/reports.js" asp-append-version="true"></script>
}

